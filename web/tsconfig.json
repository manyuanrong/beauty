{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true
  },
  "exclude": ["node_modules"]
}
